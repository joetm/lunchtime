@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix dct: <http://purl.org/dc/terms/>.
@prefix time: <http://www.w3.org/2000/10/swap/time#>.
@prefix wd: <http://www.wikidata.org/entity/>.
@prefix food: <http://purl.org/ontology/fo/>.
@prefix fublunch: <http://www.example.org/fub-hcc/lunch/>.


<#MenuItemMapping>
  rml:logicalSource [
    rml:source "./data/dinnermenu.json";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.menu"
  ];

  rr:subjectMap [
    rr:template "http://www.example.org/fub-hcc/lunch/{$.id}";
    rr:class food:Menu
  ];

  rr:predicateObjectMap [
    rr:predicate fublunch:keywords;
    rr:objectMap [
      rml:reference "$.words";
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate fublunch:keywords;
    rr:objectMap [
      rml:reference "$.translations.en.words";
      rr:language "en";
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate fublunch:keywords;
    rr:objectMap [
      rml:reference "$.translations.fr.words";
      rr:language "fr";
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate fublunch:keywords;
    rr:objectMap [
      rml:reference "$.translations.zh.words";
      rr:language "zh";
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate fublunch:ingredients;
    # rr:predicate wd:P527; # has_part
    rr:objectMap [
      rml:reference "$.ingredients";
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate food:side_dish;
    rr:objectMap [
      rml:reference "$.sidedishes";
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate food:side_dish;
    rr:objectMap [
      rml:reference "$.translations.en.sidedishes";
      rr:language "en"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate food:side_dish;
    rr:objectMap [
      rml:reference "$.translations.fr.sidedishes";
      rr:language "fr"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate food:side_dish;
    rr:objectMap [
      rml:reference "$.translations.zh.sidedishes";
      rr:language "zh"
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate dct:title;
    rr:objectMap [
      rml:reference "$.description"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate dct:title;
    rr:objectMap [
      rml:reference "$.translations.en.description";
      rr:language "en"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate dct:title;
    rr:objectMap [
      rml:reference "$.translations.fr.description";
      rr:language "fr"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate dct:title;
    rr:objectMap [
      rml:reference "$.translations.zh.description";
      rr:language "zh"
    ]
  ];

  rr:predicateObjectMap [
    # rr:predicate time:dayOfWeek;
    rr:predicate wd:P2894;
    rr:objectMap [
      rml:reference "$.weekday";
    ]
  ];

  rr:predicateObjectMap [
    # rr:predicate fublunch:price;
    rr:predicate wd:P2284; # price
    rr:objectMap [
      rml:reference "$.price" ;
      rr:datatype xsd:float ;
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate fublunch:allergy;
    rr:objectMap [
      rml:reference "$.allergy" ;
      rr:datatype xsd:boolean ;
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate fublunch:vegetarian;
    rr:objectMap [
      rml:reference "$.vegetarian" ;
      rr:datatype xsd:boolean ;
    ]
  ].
